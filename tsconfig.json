{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "rootDir": "src",
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "esnext"
        ],
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}