{
    "compilerOptions": {
        "outDir": "dist",
        "module": "Node16",
        "moduleResolution": "node16",
        "target": "es2020",
        "lib": [
            "esnext"
        ],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}