{
  "name": "monoql",
  "version": "1.0.0",
  "description": "A generative GraphQL toolchain for Typescript.",
  "author": "Nick Glenn <nick@catalystsoftworks.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "monoql": "dist/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickglenn/monoql.git"
  },
  "keywords": [
    "graphql",
    "toolchain",
    "codegen",
    "generative"
  ],
  "scripts": {
    "build": "tsc",
    "schema": "typescript-json-schema 'src/config.ts' Config --required --topRef --out schema.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "demo": "ts-node src/bin.ts --schema ./example/schema/**/*.graphqls --output ./example/generated",
    "bin": "ts-node src/bin.ts"
  },
  "dependencies": {
    "glob": "^8.1.0",
    "graphql": "^16.6.0",
    "listr": "^0.14.3",
    "rxjs": "^7.8.0",
    "ts-morph": "^17.0.1",
    "yaml": "^2.2.1",
    "yargs": "^17.7.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/listr": "^0.14.4",
    "@types/node": "^18.14.1",
    "@types/yargs": "^17.0.22",
    "ts-node": "^10.9.1"
  }
}