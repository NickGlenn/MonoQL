{
  "name": "monoql",
  "version": "2.0.0",
  "description": "GraphQL and MongoDB backend framework",
  "scripts": {
    "build": "rimraf dist; tsc -p tsconfig.json",
    "preversion": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "bin": {
    "monoql": "./bin/cli.js",
    "create-monoql": "./bin/create.js"
  },
  "keywords": [
    "mongo",
    "backend",
    "api",
    "graphql",
    "codegen"
  ],
  "author": "Nick Glenn <nick@catalystsoftworks.com>",
  "homepage": "https://github.com/catalystsoftworks/monoql#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./adapters/*": "./dist/adapters/*"
  },
  "files": [
    "bin",
    "dist"
  ],
  "directories": {
    "bin": "bin",
    "dist": "dist",
    "test": "__tests__"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catalystsoftworks/monoql.git"
  },
  "bugs": {
    "url": "https://github.com/catalystsoftworks/monoql/issues"
  },
  "devDependencies": {
    "@types/node": "^20.10.1",
    "@types/pluralize": "^0.0.33",
    "@types/yargs": "^17.0.32",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@digitak/esrun": "^3.2.25",
    "@graphql-tools/load-files": "^7.0.0",
    "case": "^1.6.3",
    "graphql": "^16.8.1",
    "mongodb": "^6.3.0",
    "pluralize": "^8.0.0",
    "ts-morph": "^20.0.0",
    "typescript": "^5.3.2",
    "yargs": "^17.7.2"
  },
  "optionalDependencies": {
    "rollup": "^4.6.1",
    "vite": "^5.0.4"
  }
}